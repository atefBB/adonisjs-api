{
    "extends": "adonis-preset-ts/tsconfig.json",
    "include": ["**/*"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "./",
        "sourceMap": true,
        "paths": {
            "@app/*": ["./app/*"],
            "@config/*": ["./config/*"],
            "@contracts/*": ["./contracts/*"],
            "@db/*": ["./database/*"]
        },
        "types": [
            "@adonisjs/core",
            "@japa/preset-adonis/build/adonis-typings",
            "@adonisjs/lucid"
        ]
    }
}
